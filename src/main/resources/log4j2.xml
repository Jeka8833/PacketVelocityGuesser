<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="SysOut" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %c{2}:%M:%L: %highlight{%msg%n%throwable}" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="SysOut"/>
        </Root>
    </Loggers>
</Configuration>